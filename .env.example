# Database connection URL
# Format: jdbc:postgresql://<HOST>:<PORT>/<DATABASE_NAME>
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/postgres

# Database username
SPRING_DATASOURCE_USERNAME=postgres

# Database password
# Note: Replace this with your actual database password
SPRING_DATASOURCE_PASSWORD=mysecretpassword

# Mail server configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_USERNAME=user@example.com
MAIL_PASSWORD=dummypassword123
MAIL_FROM=mail@example.com

# Documentation
SWAGGER_ENABLED=false

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true

# Default Rate Limit Config
RATE_LIMIT_DEFAULT_LIMIT=100
RATE_LIMIT_DEFAULT_REFRESH=1s
RATE_LIMIT_DEFAULT_TIMEOUT=0

# Per-Client Rate Limit Config
RATE_LIMIT_CLIENT_LIMIT=10
RATE_LIMIT_CLIENT_REFRESH=1m
RATE_LIMIT_CLIENT_TIMEOUT=0

# Global Rate Limits
RATE_LIMIT_AUTH_GLOBAL_LIMIT=1000
RATE_LIMIT_AUTH_GLOBAL_REFRESH=1m
RATE_LIMIT_API_GLOBAL_LIMIT=3000
RATE_LIMIT_API_GLOBAL_REFRESH=1m

# Per-Client Rate Limits
RATE_LIMIT_AUTH_CLIENT_LIMIT=10
RATE_LIMIT_AUTH_CLIENT_REFRESH=1m
RATE_LIMIT_API_CLIENT_LIMIT=300
RATE_LIMIT_API_CLIENT_REFRESH=1m

